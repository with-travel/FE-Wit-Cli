# ios/fastlane/Fastfile

default_platform(:ios)

platform :ios do
  desc "Upload archive directly to TestFlight (from .xcarchive => .ipa => upload)"
  lane :upload_archive_to_testflight do |options|
    # 1) ë³€ê²½ì‚¬í•­(ë¦´ë¦¬ì¦ˆ ë…¸íŠ¸)
    changelog = options[:changelog] || ENV["CHANGELOG"] || "ìƒˆë¡œìš´ ë²„ì „ì´ ì¶œì‹œë˜ì—ˆìŠµë‹ˆë‹¤."

    puts "ğŸš€ ========================================"
    puts "ğŸš€ TestFlight ì§ì ‘ ì—…ë¡œë“œ ì‹œì‘"
    puts "ğŸš€ ========================================"
    puts "ğŸ“ ë³€ê²½ì‚¬í•­: #{changelog}"

    # 2) .xcarchive ì°¾ê¸°
    possible_archive_paths = [
      "../../build/Wit.xcarchive",  # fastlane ë””ë ‰í† ë¦¬ ê¸°ì¤€
      "../build/Wit.xcarchive",     # ios ë””ë ‰í† ë¦¬ ê¸°ì¤€
      "build/Wit.xcarchive"         # ios/build
    ]

    archive_path = possible_archive_paths.find { |p| File.exist?(p) }
    unless archive_path
      puts "âŒ ì•„ì¹´ì´ë¸Œ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤!"
      possible_archive_paths.each { |p| puts "  - #{p}" }
      UI.user_error!("Archive file not found")
    end
    puts "âœ… ì•„ì¹´ì´ë¸Œ íŒŒì¼ ë°œê²¬: #{archive_path}"
    puts "ğŸ“¦ ì•„ì¹´ì´ë¸Œ í¬ê¸°: #{`du -sh '#{archive_path}'`.strip}"

    # 3) .ipa ì¶”ì¶œ (ê¸°ì¡´ ì•„ì¹´ì´ë¸Œ ì¬í™œìš©)
    #    - output_directory: ../build (ios/fastlane ê¸°ì¤€ìœ¼ë¡œ í•œ ë‹¨ê³„ ìœ„ì˜ build)
    #    - output_name: Wit.ipa
    ipa_path = build_ios_app(
      archive_path: archive_path,
      skip_archive: true,                 # ì´ë¯¸ ì•„ì¹´ì´ë¸Œ ìˆìŒ
      export_method: "app-store",
      configuration: "Release",           # âœ… Release ê°•ì œ
      workspace: "./Wit.xcworkspace",     # (ìë™ ê°ì§€ë˜ì§€ë§Œ ëª…ì‹œí•´ë„ ì•ˆì „)
      scheme: "Wit",
    
      # ë‚´ë³´ë‚´ê¸° ë‹¨ê³„ì—ì„œ í”„ë¡œë¹„ì €ë‹/ì„œëª… ì •ë³´ë¥¼ í™•ì‹¤íˆ ì§€ì •
      export_options: {
        method: "app-store",
        signingStyle: "manual",
        signingCertificate: "Apple Distribution",
        provisioningProfiles: {
          "com.Juhkang.Wit" => (ENV["PROVISIONING_PROFILE_SPECIFIER"] || "Wit CLI Distribution")
        }
      },

      # ë¶ˆí•„ìš”í•œ ì¬íƒì§€/íŒ¨í‚¤ì§€ ì²˜ë¦¬ ë„ê¸°(ì†ë„+ì•ˆì •)
      skip_profile_detection: true,
      skip_package_dependencies_resolution: true,
    
      # ë‚´ë³´ë‚´ê¸° ì‹œ í”„ë¡œí•„/ì„œëª… ê´€ë ¨ ì—…ë°ì´íŠ¸ í—ˆìš©(í•„ìš”ì‹œ)
      export_xcargs: "-allowProvisioningUpdates",
    
      output_directory: "../build",
      output_name: "Wit"
    )


    # 4) TestFlight ì—…ë¡œë“œ
    upload_to_testflight(
      ipa: ipa_path,
      changelog: changelog,
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      api_key_path: ENV["APP_STORE_CONNECT_API_KEY_PATH"] # ğŸ” ëª…ì‹œì ìœ¼ë¡œ ì „ë‹¬
    )

    puts "âœ… TestFlight ì—…ë¡œë“œ ì™„ë£Œ!"
    puts "ğŸš€ ========================================"
  end

  desc "Complete build and upload process"
  lane :release do
    upload_archive_to_testflight
  end
end
