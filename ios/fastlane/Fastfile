      # í•„ìš” ì‹œ export_optionsë¥¼ ëª…ì‹œì ìœ¼ë¡œ:
      # export_options: {
      #   method: "app-store",
      #   signingStyle: "manual"
      # }
    )

    # 4) TestFlight ì—…ë¡œë“œ
    upload_to_testflight(
      ipa: ipa_path,
      changelog: changelog,
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      api_key_path: ENV["APP_STORE_CONNECT_API_KEY_PATH"] # ğŸ” ëª…ì‹œì ìœ¼ë¡œ ì „ë‹¬
    )

    puts "âœ… TestFlight ì—…ë¡œë“œ ì™„ë£Œ!"
