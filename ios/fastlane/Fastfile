# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Build and export IPA for TestFlight"
  lane :build_and_export do |options|
    # í™˜ê²½ ë³€ìˆ˜ì—ì„œ ê°’ ê°€ì ¸ì˜¤ê¸°
    version_name = options[:version_name] || ENV["VERSION_NAME"]
    build_number = options[:build_number] || ENV["BUILD_NUMBER"]
    provisioning_profile = options[:provisioning_profile] || ENV["PROVISIONING_PROFILE_SPECIFIER"]
    
    # ë²„ì „ ì •ë³´ ì¶œë ¥
    puts "ğŸ”¢ Version: #{version_name}"
    puts "ğŸ”¢ Build Number: #{build_number}"
    puts "ğŸ“± Provisioning Profile: #{provisioning_profile}"
    
    # ì•„ì¹´ì´ë¸Œê°€ ì´ë¯¸ ì¡´ì¬í•˜ëŠ”ì§€ í™•ì¸ (ì—¬ëŸ¬ ê²½ë¡œ ì‹œë„)
    possible_paths = [
      "../../build/Wit.xcarchive",        # fastlane ë””ë ‰í† ë¦¬ ê¸°ì¤€ (ê°€ì¥ ê°€ëŠ¥ì„± ë†’ìŒ)
      "../build/Wit.xcarchive",           # ios ë””ë ‰í† ë¦¬ ê¸°ì¤€
      "build/Wit.xcarchive",              # ios/build  
      File.expand_path("../../build/Wit.xcarchive", Dir.pwd),  # fastlane ê¸°ì¤€ ì ˆëŒ€ê²½ë¡œ
      File.expand_path("../build/Wit.xcarchive", Dir.pwd),     # ios ê¸°ì¤€ ì ˆëŒ€ê²½ë¡œ
      File.expand_path("build/Wit.xcarchive", Dir.pwd)         # í˜„ì¬ ë””ë ‰í† ë¦¬ ê¸°ì¤€
    ]
    
    archive_path = nil
    possible_paths.each do |path|
      if File.exist?(path)
        archive_path = path
        break
      end
    end
    
    if archive_path
      puts "âœ… ê¸°ì¡´ ì•„ì¹´ì´ë¸Œ íŒŒì¼ì„ ì‚¬ìš©í•©ë‹ˆë‹¤: #{archive_path}"
    else
      puts "âŒ ì•„ì¹´ì´ë¸Œ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤!"
      puts "ì‹œë„í•œ ê²½ë¡œë“¤:"
      possible_paths.each { |path| puts "  - #{path}" }
      puts "í˜„ì¬ ì‘ì—… ë””ë ‰í† ë¦¬: #{Dir.pwd}"
      puts "ë””ë ‰í† ë¦¬ ë‚´ìš©:"
      puts `ls -la`
      puts "ìƒìœ„ ë””ë ‰í† ë¦¬ ë‚´ìš©:"
      puts `ls -la ..`
      UI.user_error!("Archive file not found")
    end
    
    # Export Options ë™ì  ìƒì„±
    export_options = {
      method: "app-store-connect",
      uploadBitcode: false,
      uploadSymbols: true,
      compileBitcode: false,
      signingStyle: "manual",
      stripSwiftSymbols: true,
      teamID: "6S8WKQFV7D",
      destination: "export",
      provisioningProfiles: {
        "com.Juhkang.Wit" => provisioning_profile
      },
      signingCertificate: "Apple Distribution"
    }
    
    puts "ğŸ“ Export Options:"
    puts export_options
    
    # IPA ë‚´ë³´ë‚´ê¸° (fastlane ë””ë ‰í† ë¦¬ ê¸°ì¤€ìœ¼ë¡œ ê²½ë¡œ ìˆ˜ì •)
    output_directory = "../../build/ipa"
    puts "ğŸ“ IPA ì¶œë ¥ ë””ë ‰í† ë¦¬: #{output_directory}"
    
    # export_ipa ëŒ€ì‹  xcodebuild -exportArchive ì‚¬ìš©
    puts "ğŸš€ xcodebuild -exportArchive ì‹¤í–‰ ì¤‘..."
    
    # Export options plist íŒŒì¼ ìƒì„±
    export_options_path = "/tmp/export_options.plist"
    File.open(export_options_path, 'w') do |file|
      file.write(export_options.to_plist)
    end
    
    puts "ğŸ“ ìƒì„±ëœ Export Options íŒŒì¼: #{export_options_path}"
    puts File.read(export_options_path)
    
    # xcodebuild -exportArchive ì‹¤í–‰
    sh "xcodebuild -exportArchive -archivePath '#{archive_path}' -exportPath '#{output_directory}' -exportOptionsPlist '#{export_options_path}'"
    
    puts "âœ… IPA ë‚´ë³´ë‚´ê¸° ì™„ë£Œ!"
  end
  
  desc "Upload to TestFlight"
  lane :upload_testflight do |options|
    changelog = options[:changelog] || ENV["CHANGELOG"] || "ìƒˆë¡œìš´ ë²„ì „ì´ ì¶œì‹œë˜ì—ˆìŠµë‹ˆë‹¤."
    
    # IPA íŒŒì¼ ê²½ë¡œ í™•ì¸ (í™˜ê²½ ë³€ìˆ˜ ìš°ì„  ì‚¬ìš©)
    ipa_path = ENV["IPA_PATH"] || ENV["FINAL_IPA_PATH"]
    
    if ipa_path && File.exist?(ipa_path)
      puts "âœ… í™˜ê²½ ë³€ìˆ˜ì—ì„œ IPA ê²½ë¡œ ì‚¬ìš©: #{ipa_path}"
    else
      puts "ğŸ” í™˜ê²½ ë³€ìˆ˜ì— IPA ê²½ë¡œê°€ ì—†ê±°ë‚˜ íŒŒì¼ì´ ì¡´ì¬í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤. ì§ì ‘ ê²€ìƒ‰ ì¤‘..."
      
      possible_ipa_paths = [
        "../../build/ipa/Wit.ipa",     # fastlane ë””ë ‰í† ë¦¬ ê¸°ì¤€
        "../build/ipa/Wit.ipa",        # ios ë””ë ‰í† ë¦¬ ê¸°ì¤€
        "../../build/ipa/*.ipa",       # ì™€ì¼ë“œì¹´ë“œ ê²€ìƒ‰
        "../build/ipa/*.ipa"
      ]
      
      ipa_path = nil
      possible_ipa_paths.each do |path|
        if path.include?("*")
          # ì™€ì¼ë“œì¹´ë“œ íŒ¨í„´ ì²˜ë¦¬
          Dir.glob(path).each do |file|
            if File.exist?(file)
              ipa_path = file
              break
            end
          end
        else
          if File.exist?(path)
            ipa_path = path
            break
          end
        end
        break if ipa_path
      end
      
      unless ipa_path
        puts "âŒ IPA íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤!"
        puts "ì‹œë„í•œ ê²½ë¡œë“¤:"
        possible_ipa_paths.each { |path| puts "  - #{path}" }
        puts "í™˜ê²½ ë³€ìˆ˜ IPA_PATH: #{ENV["IPA_PATH"]}"
        puts "í™˜ê²½ ë³€ìˆ˜ FINAL_IPA_PATH: #{ENV["FINAL_IPA_PATH"]}"
        UI.user_error!("IPA file not found")
      end
    end
    
    puts "ğŸ“¦ IPA íŒŒì¼ í™•ì¸ë¨: #{ipa_path}"
    puts "ğŸ“ ë³€ê²½ì‚¬í•­: #{changelog}"
    
    # TestFlight ì—…ë¡œë“œ
    upload_to_testflight(
      ipa: ipa_path,
      changelog: changelog,
      skip_waiting_for_build_processing: true,
      api_key_path: ENV["APP_STORE_CONNECT_API_KEY_PATH"]
    )
    
    puts "âœ… TestFlight ì—…ë¡œë“œ ì™„ë£Œ!"
  end
  
  desc "Complete build and upload process"
  lane :release do |options|
    build_and_export(options)
    upload_testflight(options)
  end
end
