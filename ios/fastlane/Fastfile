default_platform(:ios)

platform :ios do
  desc "Upload archive directly to TestFlight (Flutter ë°©ì‹ ì ìš©)"
  lane :upload_archive_to_testflight do |options|
    changelog = options[:changelog] || ENV["CHANGELOG"] || "ìƒˆë¡œìš´ ë²„ì „ì´ ì¶œì‹œë˜ì—ˆìŠµë‹ˆë‹¤."

    puts "ğŸš€ ========================================"
    puts "ğŸš€ TestFlight ì§ì ‘ ì—…ë¡œë“œ (2ë‹¨ê³„ ë°©ì‹)"
    puts "ğŸš€ ========================================"
    puts "ğŸ“ ë³€ê²½ì‚¬í•­: #{changelog}"

    # ì•„ì¹´ì´ë¸Œ íŒŒì¼ ì°¾ê¸°
    possible_archive_paths = [
      "../../build/Wit.xcarchive",
      "../build/Wit.xcarchive", 
      "build/Wit.xcarchive"
    ]
    archive_path = possible_archive_paths.find { |p| File.exist?(p) }
    UI.user_error!("Archive file not found") unless archive_path
    puts "âœ… ì•„ì¹´ì´ë¸Œ: #{archive_path}"
    puts "ğŸ“¦ í¬ê¸°: #{`du -sh '#{archive_path}'`.strip}"

    # App Store Connect API Key ì„¤ì •
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"], 
      key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"]
    )

    puts "ğŸ”‘ API Key ì„¤ì • ì™„ë£Œ"
    
    # ğŸ” í•„ìˆ˜ í™˜ê²½ë³€ìˆ˜ ê²€ì¦
    puts "ğŸ” GitHub Secretsì—ì„œ ì „ë‹¬ëœ í™˜ê²½ë³€ìˆ˜ ê²€ì¦ ì¤‘..."
    required_env_vars = {
      "APP_STORE_CONNECT_API_KEY_ID" => ENV["APP_STORE_CONNECT_API_KEY_ID"],
      "APP_STORE_CONNECT_ISSUER_ID" => ENV["APP_STORE_CONNECT_ISSUER_ID"],
      "APP_STORE_CONNECT_API_KEY_PATH" => ENV["APP_STORE_CONNECT_API_KEY_PATH"],
      "APPLE_ID" => ENV["APPLE_ID"],
      "APPLE_TEAM_ID" => ENV["APPLE_TEAM_ID"]
    }
    
    missing_vars = []
    required_env_vars.each do |name, value|
      if value.nil? || value.empty?
        missing_vars << name
        puts "âŒ #{name}: ëˆ„ë½ë¨"
      else
        puts "âœ… #{name}: ì„¤ì •ë¨"
      end
    end
    
    unless missing_vars.empty?
      UI.user_error!("í•„ìˆ˜ í™˜ê²½ë³€ìˆ˜ê°€ ëˆ„ë½ë˜ì—ˆìŠµë‹ˆë‹¤: #{missing_vars.join(', ')}\nGitHub Secrets ì„¤ì •ì„ í™•ì¸í•´ì£¼ì„¸ìš”.")
    end
    
    puts "âœ… ëª¨ë“  í•„ìˆ˜ í™˜ê²½ë³€ìˆ˜ ê²€ì¦ ì™„ë£Œ"
    
    # Apple Developer Account ì¸ì¦ (xcodebuildê°€ ê³„ì •ì„ ì¸ì‹í•˜ë„ë¡)
    puts "ğŸ” Apple Developer Account ì¸ì¦ ì¤‘..."
    begin
      # App Store Connect APIë¥¼ í†µí•œ ê³„ì • ì¸ì¦
      sh "xcrun altool --validate-app --type ios --file dummy.ipa --apiKey #{ENV['APP_STORE_CONNECT_API_KEY_ID']} --apiIssuer #{ENV['APP_STORE_CONNECT_ISSUER_ID']} 2>/dev/null || true"
      puts "âœ… Apple Developer Account ì¸ì¦ ì™„ë£Œ"
    rescue => e
      puts "âš ï¸ ê³„ì • ì¸ì¦ ì¤‘ ì˜¤ë¥˜ (ê³„ì† ì§„í–‰): #{e.message}"
    end

    # ğŸ¯ 1ë‹¨ê³„: ì•„ì¹´ì´ë¸Œ ìœ íš¨ì„± ê²€ì‚¬
    puts "ğŸ” ì•„ì¹´ì´ë¸Œ ìœ íš¨ì„± ê²€ì‚¬ ì¤‘..."
    
    # ì•„ì¹´ì´ë¸Œ êµ¬ì¡° í™•ì¸
    if File.exist?("#{archive_path}/Products/Applications")
      puts "âœ… ì•„ì¹´ì´ë¸Œ êµ¬ì¡° ì •ìƒ: Products/Applications ì¡´ì¬"
    else
      puts "âŒ ì•„ì¹´ì´ë¸Œ êµ¬ì¡° ì´ìƒ: Products/Applications ì—†ìŒ"
      puts "ğŸ“ ì•„ì¹´ì´ë¸Œ ë‚´ìš©:"
      puts `ls -la '#{archive_path}'`
      UI.user_error!("Invalid archive structure")
    end
    
    # Info.plist í™•ì¸
    info_plist_path = "#{archive_path}/Info.plist"
    if File.exist?(info_plist_path)
      puts "âœ… Info.plist ì¡´ì¬"
    else
      puts "âŒ Info.plist ì—†ìŒ"
      UI.user_error!("Archive Info.plist not found")
    end
    
    # ğŸ¯ 2ë‹¨ê³„: xcodebuildë¡œ ì§ì ‘ IPA ë‚´ë³´ë‚´ê¸° (gym ëŒ€ì‹ )
    puts "ğŸ“¦ xcodebuildë¡œ ì§ì ‘ IPA ë‚´ë³´ë‚´ê¸° ì¤‘..."
    
    # ğŸ” ì‹¤ì œ í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ ì´ë¦„ ì°¾ê¸°
    puts "ğŸ” ì„¤ì¹˜ëœ í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ì—ì„œ 'com.Juhkang.Wit' ë§¤ì¹­ í”„ë¡œíŒŒì¼ ì°¾ëŠ” ì¤‘..."
    
    # ì„¤ì¹˜ëœ ëª¨ë“  í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ ê²€ì‚¬
    profile_files = Dir.glob("#{Dir.home}/Library/MobileDevice/Provisioning Profiles/*.mobileprovision")
    matching_profile_name = nil
    
    profile_files.each do |profile_path|
      begin
        # í”„ë¡œíŒŒì¼ ë‚´ìš© íŒŒì‹±
        profile_content = `security cms -D -i "#{profile_path}" 2>/dev/null`
        if profile_content.include?("com.Juhkang.Wit")
          # í”„ë¡œíŒŒì¼ ì´ë¦„ ì¶”ì¶œ
          if profile_content =~ /<key>Name<\/key>\s*<string>([^<]+)<\/string>/
            matching_profile_name = $1
            puts "âœ… ë§¤ì¹­ í”„ë¡œíŒŒì¼ ë°œê²¬: #{matching_profile_name}"
            break
          end
        end
      rescue => e
        puts "âš ï¸ í”„ë¡œíŒŒì¼ íŒŒì‹± ì˜¤ë¥˜: #{e.message}"
      end
    end
    
    # ë§¤ì¹­ í”„ë¡œíŒŒì¼ì´ ì—†ìœ¼ë©´ í™˜ê²½ë³€ìˆ˜ ì‚¬ìš© (í•˜ë“œì½”ë”© ì œê±°)
    unless matching_profile_name
      matching_profile_name = ENV["PROVISIONING_PROFILE_SPECIFIER"]
      if matching_profile_name
        puts "âœ… í™˜ê²½ë³€ìˆ˜ì—ì„œ í”„ë¡œíŒŒì¼ ì‚¬ìš©: #{matching_profile_name}"
      else
        UI.user_error!("í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤. GitHub Secretsì™€ ì›Œí¬í”Œë¡œìš° ì„¤ì •ì„ í™•ì¸í•´ì£¼ì„¸ìš”.")
      end
    end

    # Export Options ìƒì„± (ë™ì  í”„ë¡œíŒŒì¼ëª… ì‚¬ìš©)
    export_options = {
      method: "app-store-connect",  # deprecated "app-store" -> "app-store-connect"
      teamID: ENV["APPLE_TEAM_ID"],
      uploadSymbols: true,
      uploadBitcode: false,
      compileBitcode: false,
      stripSwiftSymbols: true,
      signingStyle: "manual",  # automatic -> manual (ë” ì•ˆì •ì )
      # ë™ì ìœ¼ë¡œ ì°¾ì€ í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ ì‚¬ìš©
      provisioningProfiles: {
        "com.Juhkang.Wit" => matching_profile_name
      },
      # ì½”ë“œ ì‚¬ì´ë‹ ì¸ì¦ì„œ ëª…ì‹œì  ì§€ì •
      signingCertificate: "Apple Distribution"
    }
    
    puts "ğŸ“‹ Export Options ì„¤ì •:"
    puts "  - Method: #{export_options[:method]}"
    puts "  - Team ID: #{export_options[:teamID]}"
    puts "  - Signing Style: #{export_options[:signingStyle]}"
    puts "  - Provisioning Profile: #{matching_profile_name}"
    puts "  - Signing Certificate: #{export_options[:signingCertificate]}"
    
    # ExportOptions.plist ìƒì„±
    export_plist_path = "../../build/ExportOptions.plist"
    File.open(export_plist_path, 'w') do |file|
      file.write(export_options.to_plist)
    end
    
    # IPA ì¶œë ¥ ë””ë ‰í† ë¦¬ ìƒì„±
    sh "mkdir -p ../../build/ipa"
    
    # xcodebuild -exportArchive ì‹¤í–‰
    begin
      sh %Q[
        xcodebuild -exportArchive \
          -archivePath "#{archive_path}" \
          -exportPath "../../build/ipa" \
          -exportOptionsPlist "#{export_plist_path}" \
          -allowProvisioningUpdates
      ]
      
      # ìƒì„±ëœ IPA íŒŒì¼ ì°¾ê¸°
      ipa_files = Dir.glob("../../build/ipa/*.ipa")
      if ipa_files.empty?
        UI.user_error!("No IPA file found after export")
      end
      
      ipa_path = ipa_files.first
      puts "âœ… IPA ìƒì„± ì™„ë£Œ: #{ipa_path}"
      
    rescue => e
      puts "âŒ xcodebuild exportArchive ì‹¤íŒ¨: #{e.message}"
      
      # ë””ë²„ê¹… ì •ë³´
      puts "ğŸ” ë””ë²„ê¹… ì •ë³´:"
      puts "  - ì•„ì¹´ì´ë¸Œ ê²½ë¡œ: #{archive_path}"
      puts "  - Export Options: #{export_options}"
      puts "  - ì‘ì—… ë””ë ‰í† ë¦¬: #{Dir.pwd}"
      
      # ì½”ë“œ ì‚¬ì´ë‹ ìƒíƒœ í™•ì¸
      puts "ğŸ” ì½”ë“œ ì‚¬ì´ë‹ ìƒíƒœ:"
      sh "security find-identity -v -p codesigning"
      
      # í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ í™•ì¸
      puts "ğŸ” í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼:"
      sh "ls -la ~/Library/MobileDevice/Provisioning\\ Profiles/ | head -5"
      
      UI.user_error!("IPA export failed: #{e.message}")
    end
    
    puts "âœ… IPA ìƒì„± ì™„ë£Œ: #{ipa_path}"

    # ğŸ¯ 2ë‹¨ê³„: .ipa íŒŒì¼ì„ TestFlightì— ì—…ë¡œë“œ
    puts "ğŸš€ TestFlight ì—…ë¡œë“œ ì‹œì‘..."
    pilot(
      api_key: api_key,
      ipa: ipa_path,  # .ipa íŒŒì¼ ê²½ë¡œ ì „ë‹¬
      changelog: changelog,
      skip_waiting_for_build_processing: true,  # ë¹ ë¥¸ ì—…ë¡œë“œ
      distribute_external: false,
      notify_external_testers: false,
      uses_non_exempt_encryption: false,  # ì•”í˜¸í™” ê·œì • ìë™ ì„¤ì •
      skip_submission: true
    )

    puts "âœ… TestFlight ì—…ë¡œë“œ ì™„ë£Œ!"
    puts "ğŸš€ ========================================"
  end

  desc "Complete build and upload process"
  lane :release do
    upload_archive_to_testflight
  end
end