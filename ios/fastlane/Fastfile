default_platform(:ios)

platform :ios do
  desc "Build and export IPA for TestFlight"
  lane :build_and_export do |options|
    # í™˜ê²½ ë³€ìˆ˜ì—ì„œ ê°’ ê°€ì ¸ì˜¤ê¸°
    version_name = options[:version_name] || ENV["VERSION_NAME"]
    build_number = options[:build_number] || ENV["BUILD_NUMBER"]
    provisioning_profile = options[:provisioning_profile] || ENV["PROVISIONING_PROFILE_SPECIFIER"]
    
    # ë²„ì „ ì •ë³´ ì¶œë ¥
    puts "ğŸ”¢ Version: #{version_name}"
    puts "ğŸ”¢ Build Number: #{build_number}"
    puts "ğŸ“± Provisioning Profile: #{provisioning_profile}"
    
    # ì•„ì¹´ì´ë¸Œê°€ ì´ë¯¸ ì¡´ì¬í•˜ëŠ”ì§€ í™•ì¸
    archive_path = "../build/Wit.xcarchive"
    if File.exist?(archive_path)
      puts "âœ… ê¸°ì¡´ ì•„ì¹´ì´ë¸Œ íŒŒì¼ì„ ì‚¬ìš©í•©ë‹ˆë‹¤: #{archive_path}"
    else
      puts "âŒ ì•„ì¹´ì´ë¸Œ íŒŒì¼ì´ ì¡´ì¬í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤: #{archive_path}"
      puts "ë¨¼ì € xcodebuildë¡œ ì•„ì¹´ì´ë¸Œë¥¼ ìƒì„±í•´ì£¼ì„¸ìš”."
      UI.user_error!("Archive file not found")
    end
    
    # Export Options ë™ì  ìƒì„±
    export_options = {
      method: "app-store-connect",
      uploadBitcode: false,
      uploadSymbols: true,
      compileBitcode: false,
      signingStyle: "manual",
      stripSwiftSymbols: true,
      teamID: "6S8WKQFV7D",
      destination: "export",
      provisioningProfiles: {
        "com.Juhkang.Wit" => provisioning_profile
      },
      signingCertificate: "Apple Distribution"
    }
    
    puts "ğŸ“ Export Options:"
    puts export_options
    
    # IPA ë‚´ë³´ë‚´ê¸°
    export_ipa(
      archive_path: archive_path,
      output_directory: "../build/ipa",
      export_options: export_options
    )
    
    puts "âœ… IPA ë‚´ë³´ë‚´ê¸° ì™„ë£Œ!"
  end
  
  desc "Upload to TestFlight"
  lane :upload_testflight do |options|
    changelog = options[:changelog] || ENV["CHANGELOG"] || "ìƒˆë¡œìš´ ë²„ì „ì´ ì¶œì‹œë˜ì—ˆìŠµë‹ˆë‹¤."
    
    # IPA íŒŒì¼ ê²½ë¡œ í™•ì¸
    ipa_path = "../build/ipa/Wit.ipa"
    unless File.exist?(ipa_path)
      UI.user_error!("IPA file not found at #{ipa_path}")
    end
    
    puts "ğŸ“¦ IPA íŒŒì¼ í™•ì¸ë¨: #{ipa_path}"
    puts "ğŸ“ ë³€ê²½ì‚¬í•­: #{changelog}"
    
    # TestFlight ì—…ë¡œë“œ
    upload_to_testflight(
      ipa: ipa_path,
      changelog: changelog,
      skip_waiting_for_build_processing: true,
      api_key_path: ENV["APP_STORE_CONNECT_API_KEY_PATH"]
    )
    
    puts "âœ… TestFlight ì—…ë¡œë“œ ì™„ë£Œ!"
  end
  
  desc "Complete build and upload process"
  lane :release do |options|
    build_and_export(options)
    upload_testflight(options)
  end
end
