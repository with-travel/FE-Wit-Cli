default_platform(:ios)

platform :ios do
  desc "Build and export IPA for TestFlight"
  lane :build_and_export do |options|
    # í™˜ê²½ ë³€ìˆ˜ì—ì„œ ê°’ ê°€ì ¸ì˜¤ê¸°
    version_name = options[:version_name] || ENV["VERSION_NAME"]
    build_number = options[:build_number] || ENV["BUILD_NUMBER"]
    provisioning_profile = options[:provisioning_profile] || ENV["PROVISIONING_PROFILE_SPECIFIER"]
    
    # ë²„ì „ ì •ë³´ ì¶œë ¥
    puts "ğŸ”¢ Version: #{version_name}"
    puts "ğŸ”¢ Build Number: #{build_number}"
    puts "ğŸ“± Provisioning Profile: #{provisioning_profile}"
    
    # ì•„ì¹´ì´ë¸Œê°€ ì´ë¯¸ ì¡´ì¬í•˜ëŠ”ì§€ í™•ì¸ (ì—¬ëŸ¬ ê²½ë¡œ ì‹œë„)
    possible_paths = [
      "../../build/Wit.xcarchive",        # fastlane ë””ë ‰í† ë¦¬ ê¸°ì¤€ (ê°€ì¥ ê°€ëŠ¥ì„± ë†’ìŒ)
      "../build/Wit.xcarchive",           # ios ë””ë ‰í† ë¦¬ ê¸°ì¤€
      "build/Wit.xcarchive",              # ios/build  
      File.expand_path("../../build/Wit.xcarchive", Dir.pwd),  # fastlane ê¸°ì¤€ ì ˆëŒ€ê²½ë¡œ
      File.expand_path("../build/Wit.xcarchive", Dir.pwd),     # ios ê¸°ì¤€ ì ˆëŒ€ê²½ë¡œ
      File.expand_path("build/Wit.xcarchive", Dir.pwd)         # í˜„ì¬ ë””ë ‰í† ë¦¬ ê¸°ì¤€
    ]
    
    archive_path = nil
    possible_paths.each do |path|
      if File.exist?(path)
        archive_path = path
        break
      end
    end
    
    if archive_path
      puts "âœ… ê¸°ì¡´ ì•„ì¹´ì´ë¸Œ íŒŒì¼ì„ ì‚¬ìš©í•©ë‹ˆë‹¤: #{archive_path}"
    else
      puts "âŒ ì•„ì¹´ì´ë¸Œ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤!"
      puts "ì‹œë„í•œ ê²½ë¡œë“¤:"
      possible_paths.each { |path| puts "  - #{path}" }
      puts "í˜„ì¬ ì‘ì—… ë””ë ‰í† ë¦¬: #{Dir.pwd}"
      puts "ë””ë ‰í† ë¦¬ ë‚´ìš©:"
      puts `ls -la`
      puts "ìƒìœ„ ë””ë ‰í† ë¦¬ ë‚´ìš©:"
      puts `ls -la ..`
      UI.user_error!("Archive file not found")
    end
    
    # ì½”ë“œ ì‚¬ì´ë‹ ì¸ì¦ì„œ ìë™ ê°ì§€
    puts "ğŸ” ì‚¬ìš© ê°€ëŠ¥í•œ ì½”ë“œ ì‚¬ì´ë‹ ì¸ì¦ì„œ ê²€ìƒ‰ ì¤‘..."
    available_certificates = []
    
    keychains = `security list-keychains -d user`.strip.split("\n").map { |k| k.strip.gsub('"', '') }
    keychains.each do |keychain|
      if File.exist?(keychain)
        begin
          identities = `security find-identity -v -p codesigning "#{keychain}" 2>/dev/null`.strip
          unless identities.empty?
            identities.split("\n").each do |line|
              if line.match(/^\s*\d+\)\s+[A-F0-9]+\s+"([^"]+)"/)
                cert_name = $1
                available_certificates << cert_name if cert_name.include?("Distribution")
              end
            end
          end
        rescue
          # í‚¤ì²´ì¸ ì ‘ê·¼ ì‹¤íŒ¨ ì‹œ ë¬´ì‹œ
        end
      end
    end
    
    puts "ğŸ” ë°œê²¬ëœ Distribution ì¸ì¦ì„œ:"
    available_certificates.each { |cert| puts "  - #{cert}" }
    
    # ê°€ì¥ ì í•©í•œ ì¸ì¦ì„œ ì„ íƒ
    signing_certificate = if available_certificates.any? { |cert| cert.include?("Apple Distribution") }
                           "Apple Distribution"
                         elsif available_certificates.any? { |cert| cert.include?("iOS Distribution") }
                           "iOS Distribution"
                         elsif available_certificates.any?
                           available_certificates.first
                         else
                           "Apple Distribution"  # ê¸°ë³¸ê°’
                         end
    
    puts "âœ… ì„ íƒëœ ì½”ë“œ ì‚¬ì´ë‹ ì¸ì¦ì„œ: #{signing_certificate}"
    
    # Export Options ë™ì  ìƒì„±
    export_options = {
      method: "app-store-connect",
      uploadBitcode: false,
      uploadSymbols: true,
      compileBitcode: false,
      signingStyle: "manual",
      stripSwiftSymbols: true,
      teamID: "6S8WKQFV7D",
      destination: "export",
      provisioningProfiles: {
        "com.Juhkang.Wit" => provisioning_profile
      },
      signingCertificate: signing_certificate
    }
    
    puts "ğŸ“ Export Options:"
    puts export_options
    
    # IPA ë‚´ë³´ë‚´ê¸° (fastlane ë””ë ‰í† ë¦¬ ê¸°ì¤€ìœ¼ë¡œ ê²½ë¡œ ìˆ˜ì •)
    output_directory = "../../build/ipa"
    puts "ğŸ“ IPA ì¶œë ¥ ë””ë ‰í† ë¦¬: #{output_directory}"
    
    # export_ipa ëŒ€ì‹  xcodebuild -exportArchive ì‚¬ìš©
    puts "ğŸš€ xcodebuild -exportArchive ì‹¤í–‰ ì¤‘..."
    
    # Export options plist íŒŒì¼ ìƒì„±
    export_options_path = "/tmp/export_options.plist"
    File.open(export_options_path, 'w') do |file|
      file.write(export_options.to_plist)
    end
    
    puts "ğŸ“ ìƒì„±ëœ Export Options íŒŒì¼: #{export_options_path}"
    puts File.read(export_options_path)
    
    # xcodebuild -exportArchive ì‹¤í–‰ (ì—ëŸ¬ ì²˜ë¦¬ í¬í•¨)
    puts "ğŸš€ xcodebuild -exportArchive ëª…ë ¹ì–´ ì‹¤í–‰..."
    puts "ğŸ“‹ ëª…ë ¹ì–´: xcodebuild -exportArchive -archivePath '#{archive_path}' -exportPath '#{output_directory}' -exportOptionsPlist '#{export_options_path}'"
    
    begin
      sh "xcodebuild -exportArchive -archivePath '#{archive_path}' -exportPath '#{output_directory}' -exportOptionsPlist '#{export_options_path}'"
    rescue => e
      puts "âŒ xcodebuild -exportArchive ì‹¤í–‰ ì‹¤íŒ¨!"
      puts "ğŸ” ì—ëŸ¬ ì •ë³´: #{e.message}"
      
      puts ""
      puts "ğŸ” ì½”ë“œ ì‚¬ì´ë‹ ë¬¸ì œ ì§„ë‹¨ ì¤‘..."
      
      # í‚¤ì²´ì¸ ìƒíƒœ í™•ì¸
      puts "ğŸ“‹ í˜„ì¬ í‚¤ì²´ì¸ ëª©ë¡:"
      sh "security list-keychains -d user"
      
      # ì½”ë“œ ì‚¬ì´ë‹ ì¸ì¦ì„œ í™•ì¸
      puts ""
      puts "ğŸ“‹ ì‚¬ìš© ê°€ëŠ¥í•œ ì½”ë“œ ì‚¬ì´ë‹ ì¸ì¦ì„œ:"
      keychains = `security list-keychains -d user`.strip.split("\n").map { |k| k.strip.gsub('"', '') }
      keychains.each do |keychain|
        if File.exist?(keychain)
          puts "  ğŸ”‘ í‚¤ì²´ì¸: #{keychain}"
          begin
            identities = `security find-identity -v -p codesigning "#{keychain}" 2>/dev/null`.strip
            if identities.empty?
              puts "    âŒ ì½”ë“œ ì‚¬ì´ë‹ ì¸ì¦ì„œ ì—†ìŒ"
            else
              puts "    âœ… ë°œê²¬ëœ ì¸ì¦ì„œë“¤:"
              identities.split("\n").each { |line| puts "      #{line}" }
            end
          rescue
            puts "    âŒ í‚¤ì²´ì¸ ì ‘ê·¼ ì‹¤íŒ¨"
          end
        end
      end
      
      # í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ í™•ì¸
      puts ""
      puts "ğŸ“‹ í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ í™•ì¸:"
      puts "  ìš”êµ¬ë˜ëŠ” í”„ë¡œíŒŒì¼: #{provisioning_profile}"
      
      provisioning_dir = File.expand_path("~/Library/MobileDevice/Provisioning Profiles")
      if Dir.exist?(provisioning_dir)
        profiles = Dir.glob("#{provisioning_dir}/*.mobileprovision")
        puts "  ğŸ“‚ ì„¤ì¹˜ëœ í”„ë¡œíŒŒì¼ ê°œìˆ˜: #{profiles.count}"
        profiles.first(3).each do |profile|
          puts "    ğŸ“„ #{File.basename(profile)}"
        end
      else
        puts "  âŒ í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ ë””ë ‰í† ë¦¬ ì—†ìŒ"
      end
      
      puts ""
      puts "ğŸ’¡ í•´ê²° ë°©ì•ˆ:"
      puts "  1. 'iOS Distribution' ì¸ì¦ì„œê°€ í‚¤ì²´ì¸ì— ì„¤ì¹˜ë˜ì–´ ìˆëŠ”ì§€ í™•ì¸"
      puts "  2. '#{provisioning_profile}' í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ì´ ì˜¬ë°”ë¥´ê²Œ ì„¤ì¹˜ë˜ì–´ ìˆëŠ”ì§€ í™•ì¸"
      puts "  3. ì¸ì¦ì„œì™€ í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ì´ ê°™ì€ Team IDë¥¼ ì‚¬ìš©í•˜ëŠ”ì§€ í™•ì¸"
      puts "  4. í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼ì´ App Store Connect ë°°í¬ìš©ì¸ì§€ í™•ì¸"
      
      raise e  # ì›ë˜ ì—ëŸ¬ ë‹¤ì‹œ ë°œìƒ
    end
    
    puts "âœ… IPA ë‚´ë³´ë‚´ê¸° ì™„ë£Œ!"
  end
  
  desc "Upload to TestFlight"
  lane :upload_testflight do |options|
    changelog = options[:changelog] || ENV["CHANGELOG"] || "ìƒˆë¡œìš´ ë²„ì „ì´ ì¶œì‹œë˜ì—ˆìŠµë‹ˆë‹¤."
    
    # IPA íŒŒì¼ ê²½ë¡œ í™•ì¸ (í™˜ê²½ ë³€ìˆ˜ ìš°ì„  ì‚¬ìš©)
    ipa_path = ENV["IPA_PATH"] || ENV["FINAL_IPA_PATH"]
    
    if ipa_path && File.exist?(ipa_path)
      puts "âœ… í™˜ê²½ ë³€ìˆ˜ì—ì„œ IPA ê²½ë¡œ ì‚¬ìš©: #{ipa_path}"
    else
      puts "ğŸ” í™˜ê²½ ë³€ìˆ˜ì— IPA ê²½ë¡œê°€ ì—†ê±°ë‚˜ íŒŒì¼ì´ ì¡´ì¬í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤. ì§ì ‘ ê²€ìƒ‰ ì¤‘..."
      
      possible_ipa_paths = [
        "../../build/ipa/Wit.ipa",     # fastlane ë””ë ‰í† ë¦¬ ê¸°ì¤€
        "../build/ipa/Wit.ipa",        # ios ë””ë ‰í† ë¦¬ ê¸°ì¤€
        "../../build/ipa/*.ipa",       # ì™€ì¼ë“œì¹´ë“œ ê²€ìƒ‰
        "../build/ipa/*.ipa"
      ]
      
      ipa_path = nil
      possible_ipa_paths.each do |path|
        if path.include?("*")
          # ì™€ì¼ë“œì¹´ë“œ íŒ¨í„´ ì²˜ë¦¬
          Dir.glob(path).each do |file|
            if File.exist?(file)
              ipa_path = file
              break
            end
          end
        else
          if File.exist?(path)
            ipa_path = path
            break
          end
        end
        break if ipa_path
      end
      
      unless ipa_path
        puts "âŒ IPA íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤!"
        puts "ì‹œë„í•œ ê²½ë¡œë“¤:"
        possible_ipa_paths.each { |path| puts "  - #{path}" }
        puts "í™˜ê²½ ë³€ìˆ˜ IPA_PATH: #{ENV["IPA_PATH"]}"
        puts "í™˜ê²½ ë³€ìˆ˜ FINAL_IPA_PATH: #{ENV["FINAL_IPA_PATH"]}"
        UI.user_error!("IPA file not found")
      end
    end
    
    puts "ğŸ“¦ IPA íŒŒì¼ í™•ì¸ë¨: #{ipa_path}"
    puts "ğŸ“ ë³€ê²½ì‚¬í•­: #{changelog}"
    
    # TestFlight ì—…ë¡œë“œ
    upload_to_testflight(
      ipa: ipa_path,
      changelog: changelog,
      skip_waiting_for_build_processing: true,
      api_key_path: ENV["APP_STORE_CONNECT_API_KEY_PATH"]
    )
    
    puts "âœ… TestFlight ì—…ë¡œë“œ ì™„ë£Œ!"
  end
  
  desc "Complete build and upload process"
  lane :release do |options|
    build_and_export(options)
    upload_testflight(options)
  end
end
